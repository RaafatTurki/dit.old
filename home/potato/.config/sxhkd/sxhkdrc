# General

super + Return
  term launch

super + shift + {Prior,Next}
  TERM=xst-256color term zoom {1,-1}
#   TERM=xst-256color term zoom 1
#   SHELL=$TERM_SHELL $TERMINAL

super + d
  rofi -show drun
#   jgmenu_run 2>/$HOME/log.2.txt
#   jgmenu
#   $LAUNCHER

super + e
	$FM

super + z
  bspinfo -t 1

super + r
	replay-sorcery save

# super + t
# 	open_terminal_here

super + KP_Enter
	$FM trash:///

super + Escape
	$SCREENSHOT clip

super + shift + Escape
	$COLOR_PICKER
#	  XCOLOR_DISABLE_SHAPE=1 xcolor --format HEX | xclip -selection clipboard

super + l
  loginctl lock-session $XDG_SESSION_ID
#	  $LOCKER

Print + {_, shift, ctrl, super}
	$SCREENSHOT {clip, save, ocr, decode}

XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}10% && bspinfo -v
super + KP_{Subtract,Add}
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}10% && bspinfo -v
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle && bspinfo -m

super + KP_{Subtract,Add} + shift
  backlight change {-,+}10 && bspinfo -b
XF86MonBrightness{Down,Up}
  backlight change {-,+}10 && bspinfo -b

XF86Tools
  $AUDIO_PLAYER -x
#   $AUDIO_MIXER
#   $MUSIC_CLIENT
# XF86Audio{Stop,Prev,Play,Next}
# 	mpc {stop,prev,toggle,next}
# KP_Enter
# 	mpc toggle


# BSPWM
super + shift + r
	bspc wm -r

super + {_, shift +} q
	bspc node -{c, k}

super + f
	bspc desktop -l next

super + w
  bspwm-window-state

super + shift + Return
  bspwm-scratch-term toggle

