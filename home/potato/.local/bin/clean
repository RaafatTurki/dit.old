#!/bin/bash

# home cleaning
GARBAGE=(
~/.ICEauthority
~/.android
# ~/.anydesk
# ~/.aspnet
~/.cinnamon
~/.dart
~/.dartServer
~/.degit
# ~/.dotnet
~/.eclipse
~/.flutter
~/.gnome
~/.gnupg
~/.gtkrc-2.0
~/.icons
~/.java
~/.lesshst
~/.mono
~/.npm
# ~/.nuget
# ~/.omnisharp
~/.pki
~/.pnpm-debug.log
~/.pnpm-store
~/.pulse-cookie
~/.python_history
~/.stack
~/.steampath
~/.steampid
~/.subversion
~/.swt
~/.synergy
~/.tig_history
~/.urserver
~/.viminfo
~/.wget-hsts
# ~/.wine
~/.yarn
~/.yarnrc
~/.zoom
~/unity.lock
~/yarn.lock
# ~/.cache
# ~/.thumbnails
# ~/.icons

# wine
$XDG_DATA_HOME/applications/wine*
$XDG_DATA_HOME/mime/packages/x-wine*
$XDG_DATA_HOME/applications/wine-extension*
$XDG_DATA_HOME/icons/hicolor/*/*/application-x-wine-extension*
$XDG_DATA_HOME/mime/application/x-wine-extension*
)

for t in ${GARBAGE[@]}; do
  target=$HOME/$t

  # echo $t

  # rm file if exists
  if [ -e $t ]; then
    gio trash $t
    echo $t
  fi

  # rm file if symlink
  if [ -L $t ]; then
    gio trash $t
    echo $t
  fi
done
